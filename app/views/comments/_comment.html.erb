<li>
  <span class="content"><%= comment.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
  </span>
  <span class="reply">
<% if comment.replies.any? %>
    <ul class="reply">
      <%= render comment.reply%>
    </ul>
    <% end %>

    <%= render "shared/reply_form", comment: comment %>
</span>
</li>